generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(cuid())
  email      String?    @unique
  phone      String?    @unique
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  sessions   Session[]
  providers  Provider[]
  totpSecret String?
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model OtpCode {
  id          String   @id @default(cuid())
  destination String // email or phone
  channel     String // email|sms
  code        String
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  consumed    Boolean  @default(false)
}

model Provider {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  type       String // Google, GitHub
  externalId String
  createdAt  DateTime @default(now())
}
